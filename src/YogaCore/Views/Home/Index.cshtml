@{
    ViewData["Title"] = "Home Page";
}
@using System.Security.Claims;
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banners/1.jpg" alt="Register Now" class="img-responsive" />
            <div class="carousel-caption jumbotron" role="option">
                <h1>Join with Us</h1>
                <p>Join with us and find your future soul mate.</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banners/2.jpg" alt="Tips" class="img-responsive" />
            <div class="carousel-caption jumbotron" role="option">
                <h1>First Tips</h1>
                <p>Learn how to start a relationship easily. With some expert advice and experiences couple out there.</p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banners/3.jpg" alt="See the success story" class="img-responsive" />
            <div class="carousel-caption jumbotron" role="option">
                <h1>Success Story</h1>
                <p>
                    See the real sweet story of several couple by using this site. Real love never lie.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>